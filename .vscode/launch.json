{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "API: build",
      "program": "${workspaceFolder}/InterviewTask.Api/bin/Debug/net10.0/InterviewTask.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/InterviewTask.Api",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5080"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Web Dev Server (Vite)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --port 5173 --strictPort",
      "cwd": "${workspaceFolder}/interviewtask-web"
    },
    {
      "name": "Web (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/interviewtask-web"
    }
  ],
  "compounds": [
    {
      "name": "Full stack (API + Web)",
      "configurations": ["API (.NET)", "Web Dev Server (Vite)", "Web (Chrome)"],
      "stopAll": true
    },
    {
      "name": "Web only (Vite + Chrome)",
      "configurations": ["Web Dev Server (Vite)", "Web (Chrome)"],
      "stopAll": true
    }
  ]
}
